<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cdu.zjy.topictwo.mapper.RoleMapper">
    <insert id="addRole">
        INSERT INTO roles (name, background, catchphrase)
        VALUES (#{name}, #{background}, #{catchphrase})
    </insert>

    <!-- 根据 ID 查询角色 -->
    <select id="getRoleById" resultType="cdu.zjy.topictwo.model.Role">
        SELECT id, name, background, catchphrase
        FROM roles
        WHERE id = #{id}
    </select>


    <!-- 查询所有角色 -->
    <select id="getAllRoles" resultType="cdu.zjy.topictwo.model.Role">
        SELECT * FROM roles
    </select>

    <!-- 统计角色数量 -->
    <select id="getRoleCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM roles
    </select>

    <select id="getAllRolesName" resultType="cdu.zjy.topictwo.dto.AllRoleDTO">
        SELECT id , name
        FROM roles;
    </select>
</mapper>
