<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cdu.zjy.topictwo.mapper.MessageMapper">

    <resultMap id="MessageResultMap" type="cdu.zjy.topictwo.model.Message">
        <id property="id" column="id"/>
        <result property="conversationId" column="conversation_id"/>
        <result property="sender" column="sender"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="audioUrl" column="audio_url"/>
    </resultMap>

    <update id="updateMessage">
        UPDATE message
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="audioUrl != null">
                audio_url = #{audioUrl},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectByConversationId" resultMap="MessageResultMap">
        SELECT * FROM message WHERE conversation_id = #{conversationId} ORDER BY created_at ASC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO message (conversation_id, sender, content, created_at, audio_url)
        VALUES (#{conversationId}, #{sender}, #{content}, #{createdAt}, #{audioUrl})
    </insert>

</mapper>
